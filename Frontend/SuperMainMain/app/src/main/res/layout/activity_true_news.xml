<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/truenews_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sleepy_black"
    tools:context=".AllNews">
    <!-- A ScrollView to make the layout scrollable -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- The TextView to display all the news -->
        <TextView
            android:id="@+id/truenewstextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadowbox"
            android:fadeScrollbars="false"
            android:fontFamily="@font/montserrat"
            android:isScrollContainer="true"
            android:maxLines="10000"
            android:nestedScrollingEnabled="true"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:text="All the true news is displayed here"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="12sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="37dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>