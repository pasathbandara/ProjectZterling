<?xml version="1.0" encoding="utf-8"?><!-- The outermost element is a ScrollView to allow for scrolling when the content doesn't fit on the screen -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main layout is a ConstraintLayout that covers the entire screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fake_news_background_image_"
        tools:context=".contact_us">

        <!-- A TextView that serves as a logo bar with a background color -->
        <TextView
            android:id="@+id/logo_bar"
            android:layout_width="412dp"
            android:layout_height="57dp"
            android:background="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- An ImageView that displays an image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="219dp"
            android:layout_height="55dp"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="549dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/logo_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/image" />

        <!--Logo for the page-->
        <TextView
            android:id="@+id/project_z_logo"
            android:layout_width="114dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="112dp"
            android:fontFamily="@font/montserrat"
            android:text="Project Zterling"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.963"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <!--widget bar background-->
        <TextView
            android:id="@+id/btn_bar"
            android:layout_width="412dp"
            android:layout_height="57dp"
            android:layout_marginStart="159dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="194dp"
            android:background="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.449"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_bar"
            app:layout_constraintVertical_bias="0.0" />

        <!--Contact Us Image Button-->
        <ImageButton
            android:id="@+id/contcont"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="612dp"
            android:background="#24cce3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btn_bar"
            app:layout_constraintHorizontal_bias="0.877"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_bar"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/team"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--News Image Button-->
        <ImageButton
            android:id="@+id/contlatestnews"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="612dp"
            android:background="#24cce3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/contfactcheck"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/btn_bar"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/latestnews"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--News Image Button-->
        <ImageButton
            android:id="@+id/contnews"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="612dp"
            android:background="#24cce3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/contlatestnews"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/btn_bar"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:srcCompat="@drawable/newnews"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--Fact Check Image Button-->
        <ImageButton
            android:id="@+id/contfactcheck"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="612dp"
            android:background="#24cce3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/contcont"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/factcheck"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--Yasindu Details Button-->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/yasibtn"
            android:layout_width="121dp"
            android:layout_height="150dp"
            android:background="@drawable/yasindu"
            android:foregroundGravity="center"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nikibtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pasathbtn"
            app:layout_constraintVertical_bias="0.277"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--Nikesha Details Button-->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nikibtn"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:background="@drawable/nikesha"
            android:foregroundGravity="center"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.852"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manithbtn"
            app:layout_constraintVertical_bias="0.277"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--Manith Details Button-->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/manithbtn"
            android:layout_width="109dp"
            android:layout_height="135dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/manith"
            android:foregroundGravity="center"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/saichbtn"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--Pasath Details Button-->
        <ImageButton
            android:id="@+id/pasathbtn"
            android:layout_width="110dp"
            android:layout_height="135dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/pasath"
            android:foregroundGravity="center"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/saichbtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--Saicharan Details Button-->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/saichbtn"
            android:layout_width="109dp"
            android:layout_height="134dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/saicharan"
            android:foregroundGravity="center"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/manithbtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pasathbtn"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--Meet the team-->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="362dp"
            android:layout_height="42dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:shadowColor="#FFFDFD"
            android:text="@string/meet_the_team"
            android:textColor="#EFEFEF"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_bar"
            app:layout_constraintVertical_bias="0.034" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>